<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_login">

    <vn.edu.dut.itf.e_market.views.CustomFontButton
        android:id="@+id/btnSigin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/OvalButton.White"
        android:text="@string/signin"
        android:textColor="@color/black" />

    <vn.edu.dut.itf.e_market.views.CustomFontTextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/forgotpass"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <vn.edu.dut.itf.e_market.views.CustomFontButton
            android:id="@+id/login_facebook"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_facebook"
            android:visibility="gone" />


        <vn.edu.dut.itf.e_market.views.CustomLoginFacebookButton xmlns:fb="http://schemas.android.com/apk/res-auto"
            android:id="@+id/button_facebook_login"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_facebook"
            android:drawablePadding="0dp"
            fb:com_facebook_login_text=""
            fb:com_facebook_logout_text="" />

        <vn.edu.dut.itf.e_market.views.CustomFontButton
            android:id="@+id/login_google"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_circle_google_plus" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <vn.edu.dut.itf.e_market.views.CustomFontButton
            android:id="@+id/login_twitter"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_twitter_circle" />

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone" />

    </LinearLayout>


    <vn.edu.dut.itf.e_market.views.CustomFontButton
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:background="@drawable/OvalButton.DarkGray"
        android:text="@string/register"
        android:textColor="#FFFFFF" />
</merge>