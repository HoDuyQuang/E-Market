<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:paddingTop="10dp"
    tools:showIn="@layout/activity_food_detail">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/view_price"
        android:layout_toStartOf="@+id/view_price"
        android:orientation="vertical">

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="Food beauty"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:font="@string/font_light" />

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/tvOrderNow"
            style="@style/AppTheme.TextView.OrderNow"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="@string/order_now"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/discount_percent"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/ic_discount_percent"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:text="30%"
            android:textColor="@color/app_white"
            android:textSize="15sp"
            app:font="@string/font_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <vn.com.brycen.restaurant.views.CustomFontTextView
                android:id="@+id/tvOldCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="0.5$"
                android:textSize="18sp"
                android:textColor="@color/black" />


            <vn.com.brycen.restaurant.views.CustomFontTextView
                android:id="@+id/tvNewCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.5$"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>