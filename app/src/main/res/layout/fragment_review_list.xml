<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical"
    style="@style/NormalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/review_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 Reviews"
            android:textStyle="bold" />

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:text="Good"
            android:textColor="@color/app_hard_yellow" />

        <vn.com.brycen.restaurant.views.CustomFontTextView
            android:id="@+id/total_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle"
            android:gravity="center"
            android:text="8.0"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <include layout="@layout/layout_divider_home" />

    <vn.com.brycen.restaurant.views.CustomFontTextView
        android:id="@+id/add_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/add_review"
        android:textAllCaps="true"
        android:textColor="@color/app_light_blue" />

    <vn.com.brycen.restaurant.views.CustomFontButton
        android:id="@+id/add_review_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:drawableRight="@drawable/ic_add_first_review"
        android:maxLines="2"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:text="@string/first_review"
        android:textColor="@color/white" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <include layout="@layout/layout_divider_home" />

    <vn.com.brycen.restaurant.views.CustomFontTextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:text="@string/more"
        android:textAllCaps="true"
        android:textColor="@color/app_light_blue" />

</LinearLayout>