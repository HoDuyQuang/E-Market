<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/food"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    tools:showIn="@layout/item_cart">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivThumbnailFavourite"
        android:layout_width="150dp"
        android:layout_height="112dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <vn.edu.dut.itf.e_market.views.CustomFontTextView
            android:id="@+id/tvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="18dp"
            android:text="Food"
            android:maxLines="2"
            android:textColor="@color/app_hard_yellow"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/view_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <vn.edu.dut.itf.e_market.views.CustomFontTextView
                    android:id="@+id/tvOldCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="cost"
                    android:textSize="15sp" />

                <vn.edu.dut.itf.e_market.views.CustomFontTextView
                    android:id="@+id/tvNewCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Food"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <vn.edu.dut.itf.e_market.views.CustomFontTextView
                android:id="@+id/discount_percent"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_discount_percent"
                android:gravity="center"
                android:maxLines="1"
                android:text="30%"
                android:textColor="@color/app_white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <vn.edu.dut.itf.e_market.views.CustomFontTextView
        android:id="@+id/ivPoint"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        style="@style/AppTheme.TextView.Point" />
</LinearLayout>